@page
@model FUNewsManagementSystem.WebRazorPage.Pages.Tags.DeleteModel
@{
    ViewData["Title"] = "Delete Tag";
    Layout = null;
}

<h2>Are you sure you want to delete this tag?</h2>

<form method="post" asp-page="Delete" asp-route-id="@Model.Tag.TagId">
    <input type="hidden" asp-for="Tag.TagId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>