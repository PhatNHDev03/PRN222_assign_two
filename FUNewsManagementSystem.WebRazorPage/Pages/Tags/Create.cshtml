@page
@model FUNewsManagementSystem.WebRazorPage.Pages.Tags.CreateModel
@{
    Layout = null;
}

<h2>Create New Tag</h2>

<form method="post" id="createTagForm">
    <div class="form-group">
        <label for="TagName">Tag Name</label>
        <input type="text" id="TagName" name="Tag.TagName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Note">Note</label>
        <textarea id="Note" name="Tag.Note" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>



