@page
@model FUNewsManagementSystem.WebRazorPage.Pages.Tags.CreateModel
@{
    Layout = null;
}

<h2 class="text-center my-4">Create New Tag</h2>

<form method="post" id="createTagForm" class="p-4 border rounded shadow-sm bg-light">
    <div class="mb-3">
        <label for="TagName" class="form-label">Tag Name</label>
        <input type="text" id="TagName" name="Tag.TagName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Note" class="form-label">Note</label>
        <textarea id="Note" name="Tag.Note" class="form-control" rows="3"></textarea>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>