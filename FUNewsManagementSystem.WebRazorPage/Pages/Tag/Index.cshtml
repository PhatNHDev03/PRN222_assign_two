@page
@model FUNewsManagementSystem.WebRazorPage.Pages.Tag.IndexModel
@{
    ViewData["Title"] = "Tags";
}

<h2>Tag List</h2>

<a asp-page="Create" class="btn btn-primary">Add New Tag</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model.Tags)
        {
            <tr>
                <td>@tag.TagId</td>
                <td>@tag.TagName</td>
                <td>@tag.Note</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@tag.TagId">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@tag.TagId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>